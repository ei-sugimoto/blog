---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { getArticlesByCategory, getAllCategories } from '../../utils/content';

export const getStaticPaths: GetStaticPaths = async () => {
  const allArticles = await getCollection('articles');
  const allCategories = getAllCategories(allArticles);
  
  return allCategories.map((category) => ({
    params: { category },
    props: { 
      articles: getArticlesByCategory(allArticles, category),
      category,
      allCategories
    },
  }));
};

const { articles, category, allCategories } = Astro.props;
---

<BaseLayout title={`カテゴリ: ${category} - Tech Blog`} description={`${category}に関する記事一覧`}>
  <Header />
  
  <main class="flex-1 bg-white dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- パンくずナビ -->
      <nav class="text-sm breadcrumbs mb-8">
        <ol class="flex items-center space-x-2 text-gray-500 dark:text-gray-400">
          <li>
            <a href="/" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">ホーム</a>
          </li>
          <li>
            <span class="mx-2">/</span>
          </li>
          <li>
            <a href="/categories" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">カテゴリ</a>
          </li>
          <li>
            <span class="mx-2">/</span>
          </li>
          <li class="text-gray-700 dark:text-gray-300">
            {category}
          </li>
        </ol>
      </nav>

      <!-- ページヘッダー -->
      <header class="mb-12">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          カテゴリ: {category}
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          {articles.length}件の記事があります
        </p>
      </header>

      <!-- 他のカテゴリ -->
      <section class="mb-12">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
          その他のカテゴリ
        </h2>
        <div class="flex flex-wrap gap-2">
          {allCategories.filter(c => c !== category).map((otherCategory) => (
            <a 
              href={`/categories/${otherCategory}`} 
              class="inline-block bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 px-3 py-1 rounded-md text-sm font-medium hover:bg-green-200 dark:hover:bg-green-800 transition-colors"
            >
              {otherCategory}
            </a>
          ))}
        </div>
      </section>

      <!-- 記事一覧 -->
      <section>
        {articles.length === 0 ? (
          <div class="text-center py-12">
            <p class="text-gray-600 dark:text-gray-400 text-lg">
              このカテゴリの記事はありません。
            </p>
          </div>
        ) : (
          <div class="grid gap-6 md:gap-8">
            {articles.map((article) => (
              <ArticleCard
                title={article.data.title}
                date={article.data.date}
                description={article.data.description}
                tags={article.data.tags}
                slug={article.slug}
                category={article.data.category}
              />
            ))}
          </div>
        )}
      </section>
    </div>
  </main>
  
  <Footer />
</BaseLayout>